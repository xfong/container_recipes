BootStrap: localimage
From: pre.sif

%files
build_nupic.sh    /opt

%appenv nupic
export CONDA_DIR=/opt/conda-nupic
export PATH=${CONDA_DIR}/bin:$PATH

%post
/bin/bash /opt/build_nupic.sh
if [ -e /opt/Miniconda3-latest-Linux-x86_64.sh ]; then
    rm -f /opt/Miniconda3-latest-Linux-x86_64.sh
fi
rm -f /opt/build_*.sh
