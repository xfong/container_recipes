BootStrap: localimage
From: pre.sif

%files
python    /opt

%post
. /etc/profile
. /.singularity.d/env/90-environment.sh
export PATH=/opt/intel/intelpython3/bin:$PATH
export CONDA_VERSION=2020.02
cd /opt && \
wget --quiet --no-check-certificate https://repo.continuum.io/archive/Anaconda3-${CONDA_VERSION}-Linux-x86_64.sh && \
/bin/bash /opt/Anaconda3-${CONDA_VERSION}-Linux-x86_64.sh -f -b -p /opt/intel/intelpython3 && \
rm /opt/Anaconda3-${CONDA_VERSION}-Linux-x86_64.sh && \
mv /opt/python \
  /usr/local/modulefiles/dev/intel/. && \
module load \
  intel/mkl \
  intel/python && \
conda config \
  --add channels \
  intel && \
conda \
  install -y \
  intelpython3_full \
  python=3 && \
conda clean -yt

%appenv mklpython
. /etc/profile.d/modules.sh
module load intel/mkl
module load intel/ipp
module load intel/iomp
module load intel/daal
module load intel/tbb_gcc47
module load intel/pstl
module load intel/python

%appenv fullpython
. /etc/profile.d/modules.sh
module load intel/mkl
module load intel/ipp
module load intel/iomp
module load intel/daal
module load intel/tbb_gcc47
module load intel/pstl
module load intel/mpi
module load intel/python
